<div class="container card">
  <div class="card-body">
    <div id="payment-errors" class="alert alert-danger d-none" role="alert">
    </div>
  <h3 class="text-center text-info"><i class="fas fa-rupee-sign"></i> {{total}}</h3>
  <form action="/checkout" method="post" id="checkout-form">
  <div class="form-row">
    <div class="form-group col-md-12">
      <label for="Name">Name</label>
      <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Address</label>
    <input type="text" class="form-control" name="address" id="address" placeholder="1234 Main St" required>
  </div>
  <div class="form-group">
    <label for="inputAddress2">Address 2</label>
    <input type="text" class="form-control" name="address2" id="address2" placeholder="Apartment, studio, or floor">
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <label for="debit card number">Card Name</label>
      <input type="text" class="form-control" name="card-name" placeholder="Card Holder Nmae"  id="card-name" required>
    </div>

    <div class="form-group col-md-4">
      <label for="debit card number">Card Number</label>
      <input type="text" class="form-control" name="card-number"  placeholder="XXXX XXXX XXXX XXXX" id="card-number" required>
    </div>

    <div class="form-group col-md-2">
      <label for="CVC">CVC</label>
      <input type="text" class="form-control" name="cvc"  placeholder="XXX" id="cvc" required>
    </div>

    <div class="form-group col-md-2">
      <label for="CVC">Expiry</label>
      <input type="text" class="form-control" name="expiry-date" placeholder="0X/0XXX"  id="expiry-date" required>
    </div>
  </div>

  <button type="submit" class="btn btn-primary">Place order </button>
</form>
 </div>
</div>
<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>
