<div class="card mx-auto my-4 shadow-sm p-3 mb-5 bg-white rounded" style="width: 27rem;">
  <div class="card-body">
    <h3 class="card-title">Sign Up</h3>

      <form action="/user/signup" method="post">

        {{#if hasErrors}}
          {{#each messages}}
          <p class="alert alert-danger">{{this}} </p>
          {{/each}}
        {{/if}}

        <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" required>
        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
        <label for="exampleInputPassword1">Password </label>
        <input name="password" type="password" minlength="6" title="Password minimum length :6" class="form-control" id="exampleInputPassword1" placeholder="Password" required>
        </div>
        <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label" for="exampleCheck1">Check me out</label>
        </div>
        <input type="hidden" value="{{csrfToken}}" name="_csrf">
        <button type="submit" class="btn btn-success">Submit</button>
      </form>
  </div>


</div>
