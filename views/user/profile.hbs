<table class="table table-bordered col-md-8 mx-auto table-hover shadow p-3 mb-5 bg-white rounded">
  <thead>
    <tr class="text-center text-info h1 bg-light">
      <th colspan="3"="col">Your Orders <i class="fas fa-shipping-fast"></i></th>
    </tr>
  </thead>
  <thead>
    <tr>
      <th scope="col">Orders</th>
      <th scope="col">Quantity</th>
      <th scope="col">Price</th>
    </tr>
  </thead>
  <tbody>
    {{#each orders}}
      {{#each this.items}}
    <tr>
      <td class="text-capitalize">{{this.item.title}}</td>
      <td>{{this.qty}}</td>
      <td>{{this.price}}</td>
    </tr>
      {{/each}}
    <tr class="h4 text-success bg-light">
      <td class="text-left " colspan="2">Total :</td>
      <td class="text-right">
        <i class="fas fa-rupee-sign text-right"></i> {{this.cart.totalPrice}}
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
